@using CodeNames.Cores.Models
@model CodeNames.WebApp.Models.GameViewModel
@{
    ViewBag.Title = "Home Page";
}

@functions
{
    string GetColor(Color color)
    {
        switch (color)
        {
            case Color.Red:
                return "red";
            case Color.Blue:
                return "blue";
            case Color.Black:
                return "black";
            case Color.Beige:
                return "beige";
            default:
                throw new ArgumentOutOfRangeException(nameof(color), color, null);
        }
    }
}

@section head
{
    <style>
        .cn-card-line{
          
        }
        .cn-card-container{
            /*border-width: 1px; */
            /*border-style: solid; */
            /*border-color: red*/
        }
        
        .cn-card
        {
            width: 200px;
            height: 120px;
            background-image: url("/Content/Images/Card.png");
            background-repeat: no-repeat;
            background-position: top left;
            background-size: 100%;
        }
        .cn-card span
        {
            display: block;
            width: 100% ;
            text-transform: uppercase;
        }
        
        .cn-card span.main
        {
            padding: 15px 0 0 18px;
            font-weight: bold;
            font-size: 19px;
        }
        
        .cn-card span.flip
        {
            padding: 0 0 38px 66px;
            text-transform: uppercase;
            font-weight: bold;
            color: #a59d9c;
             font-size: 15px;
        }
        
        .flip
        {
            -moz-transform: scale(-1, -1);
            -webkit-transform: scale(-1, -1);
            -o-transform: scale(-1, -1);
            -ms-transform: scale(-1, -1);
            transform: scale(-1, -1);
        }
        
        .cn-key-container
        {
            width: 200px; 
            height: 200px; 
            background-image: url('/Content/Images/key-@(GetColor(Model.FirstPlayer)).png')
        }
        
        .cn-key-line 
        {
            width: 143px; 
            height:29px; 
            position:relative; 
            top: 31px; 
            left: 31px;
        }
        
        .key-dot
        {
            height:28px; 
            border: black 1px solid;
        }
    </style>
}

<h1>Codename</h1>

<div class="row">
    <div class="col-10">
        @for (int i = 0; i < 5; i++)
        {
            <div class="cn-card-line d-flex flex-row w-100 mb-2">
                @for (int j = 0; j < 5; j++)
                {
                    <div class="cn-card-container flex-fill">
                        <div class="cn-card">
                            <span class="flip">@Model.Cards[i, j].Word</span>
                            <span class="main">@Model.Cards[i, j].Word</span>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
    <div class="col-2">
        <div>
            <img src="/Content/Images/blue-man.png" style="margin-bottom: 5px; border-radius:  5px;"/>    
        </div>
        <div>
           <img src="/Content/Images/red-woman.png" style="margin-bottom: 5px; border-radius: 5px;"/>    
        </div>
        <div class="cn-key-container">
            @for (int i = 0; i < 5; i++)
            {
                <div class="d-flex flex-row cn-key-line">
                @for (int j = 0; j < 5; j++)
                {
                    <div class="flex-fill key-dot"><img src="/Content/Images/dot-@(GetColor(Model.Cards[i,j].Color)).png" /></div>
                }
                </div>
            }
        </div>
    </div>
</div>
